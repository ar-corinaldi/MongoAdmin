<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="./stylesheets/style.css">
  <title>MongoAdmin</title>
</head>

<body>
  <nav class="navbar navbar-light bg-primary">
    <a class="navbar-brand" href="../../">Start</a>
  </nav>
  <div class="container mt-4">
    <div class="row">
      <div class="col">
        <label for="databases">Select Database</label>
        <select name="database" id="databases">
          <option value="opciones" selected>---</option>
          <% databases.forEach( (database) => { %>
          <option id=<%= database.name %>>
            <%= database.name %>
          </option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label for="collections">Select Collection</label>
        <select name="collections" id="collections">
          <option value="---">---</option>
        </select>
      </div>
    </div>
    <div class="row">
      <div class="col-2">
        <form id="form" action="/databases/add" method="POST">
          <button id="butSubmit" type="submit" class="btn-primary m-0">Submit</button>
        </form>
        <form id="form-update" action="/databases/update" method="POST">
          <button id="butUpdate" type="submit" class="btn-primary m-0">Update</button>
        </form>
        <button id="butDelete" type="submit" class="btn-primary mt-2">Delete</button>
        <div class="row">
          <label for="_idDelete">_id</label>
          <input class="buscador" placeholder="Not nessesary exact _id" id="_idDelete" name="_id" type="text" required>
        </div>
      </div>
      <div class="col-10">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead id="table-headers">
              </thead>
              <tbody id="table-content">
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="./javascripts/collections.js"></script>
</body>

</html>