<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>MongoAdmin</title>
</head>
<body>
  <label for="databases">Seleccionar Database:</label>
  <select name="database" id="databases">
    <option value="opciones" selected>Seleccionar</option>
    <% databases.forEach( (database) => { %>
      <option id=<%= database.name %>>
        <%= database.name %>
      </option>
      <% }) %>
  </select>
  <ul id="collections" class="list-group">
  </ul>
  <script src="./javascripts/collections.js"></script>
</body>
</html>